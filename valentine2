<body>

  <!-- Sad emoji overlay -->
  <div id="sadFace">üòû</div>

  <!-- SCREEN 1 -->
  <div id="screen1" class="screen active">
    <div class="envelopeWrap" aria-label="enveloppe">
      <div class="envelopeHeart"></div>
      <button class="openBtn" id="openBtn">Open me</button>
    </div>
  </div>

  <!-- SCREEN 2 -->
  <div id="screen2" class="screen">
    <h1>Romayssa, veux-tu √™tre ma Valentine ? ‚ù§Ô∏è</h1>
    <div class="buttons">
      <button class="btn" id="yesBtn">Oui, avec plaisir</button>
      <button class="btn" id="noBtn">Non, j'ai autre chose √† faire</button>
    </div>
  </div>

  <!-- SCREEN 3 -->
  <div id="screen3" class="screen">
    <div class="bear">üß∏‚ù§Ô∏è</div>
    <h1>T'avais pas le choix fa√ßon üòå‚ù§Ô∏è</h1>
    <button id="loveBtn">Je t‚Äôaime ‚ù§Ô∏è</button>
    <div id="loveMessage">Moi aussi, pour toujours üíû</div>
  </div>

<script>
  const screen1 = document.getElementById("screen1");
  const screen2 = document.getElementById("screen2");
  const screen3 = document.getElementById("screen3");

  const openBtn = document.getElementById("openBtn");
  const yesBtn  = document.getElementById("yesBtn");
  const noBtn   = document.getElementById("noBtn");

  const sadFace = document.getElementById("sadFace");

  const loveBtn = document.getElementById("loveBtn");
  const loveMessage = document.getElementById("loveMessage");

  let noAttempts = 0;
  let heartsInterval = null;

  function showScreen(from, to) {
    from.classList.remove("active");
    to.classList.add("active");
  }

  function placeNoBtnInitial() {
    // Place it near the YES button area at start
    const centerX = window.innerWidth / 2;
    const centerY = window.innerHeight / 2 + 80;
    noBtn.style.left = (centerX + 90) + "px";
    noBtn.style.top  = (centerY) + "px";
  }

  function clamp(val, min, max) { return Math.min(Math.max(val, min), max); }

  function moveNoBtnRandom() {
    const padding = 16;
    const btnW = noBtn.offsetWidth || 220;
    const btnH = noBtn.offsetHeight || 50;

    const x = Math.random() * (window.innerWidth  - btnW - padding * 2) + padding;
    const y = Math.random() * (window.innerHeight - btnH - padding * 2) + padding;

    noBtn.style.left = x + "px";
    noBtn.style.top  = y + "px";
  }

  function bumpSadEmoji() {
    // After 5 attempts, show and grow more each attempt
    if (noAttempts < 5) return;

    sadFace.style.opacity = "1";

    const extra = noAttempts - 5;          // 0,1,2,3...
    const scale = 0.8 + extra * 0.25;      // grows progressively
    sadFace.style.transform = `translate(-50%, -50%) scale(${scale})`;
  }

  function registerNoAttempt() {
    noAttempts += 1;
    bumpSadEmoji();
  }

  // Screen 1 -> 2
  openBtn.addEventListener("click", () => {
    showScreen(screen1, screen2);
    // important: noBtn is absolute, so we place it after screen2 is visible
    setTimeout(placeNoBtnInitial, 0);
  });

  // YES -> final
  yesBtn.addEventListener("click", () => {
    showScreen(screen2, screen3);
    startFallingHearts();
  });

  // Make NO impossible: count attempts + move away
  // pointerenter covers mouse hover + some touch/pen cases
  noBtn.addEventListener("pointerenter", () => {
    registerNoAttempt();
    moveNoBtnRandom();
  });

  // also catch click/tap attempts (mobile)
  noBtn.addEventListener("pointerdown", (e) => {
    e.preventDefault();
    registerNoAttempt();
    moveNoBtnRandom();
  });

  window.addEventListener("resize", () => {
    if (screen2.classList.contains("active")) placeNoBtnInitial();
  });

  // Love button effects + hearts explosion
  loveBtn.addEventListener("click", () => {
    loveBtn.classList.add("glow");
    loveMessage.style.display = "block";
    explodeHeartsFromElement(loveBtn);
    setTimeout(() => loveBtn.classList.remove("glow"), 450);
  });

  function startFallingHearts() {
    if (heartsInterval) return;
    heartsInterval = setInterval(() => {
      const heart = document.createElement("div");
      heart.className = "falling-heart";
      heart.textContent = Math.random() < 0.5 ? "‚ù§Ô∏è" : "üíó";
      heart.style.left = (Math.random() * 100) + "vw";
      heart.style.fontSize = (14 + Math.random() * 18) + "px";
      heart.style.animationDuration = (2.2 + Math.random() * 3.0) + "s";
      document.body.appendChild(heart);
      setTimeout(() => heart.remove(), 6000);
    }, 220);
  }

  function explodeHeartsFromElement(el) {
    const rect = el.getBoundingClientRect();
    const originX = rect.left + rect.width / 2;
    const originY = rect.top + rect.height / 2;

    for (let i = 0; i < 22; i++) {
      const h = document.createElement("div");
      h.className = "explosion-heart";
      h.textContent = "‚ù§Ô∏è";
      h.style.left = originX + "px";
      h.style.top  = originY + "px";

      const x = (Math.random() * 240 - 120) + "px";
      const y = (Math.random() * -260) + "px";
      h.style.setProperty("--x", x);
      h.style.setProperty("--y", y);

      document.body.appendChild(h);
      setTimeout(() => h.remove(), 1000);
    }
  }
</script>

</body>
</html>
