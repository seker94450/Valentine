    @keyframes fall {
      to { transform: translateY(112vh); opacity: 0; }
    }

    /* Explosion hearts */
    .explosion-heart {
      position: fixed;
      font-size: 18px;
      animation: explode 1s forwards;
      pointer-events: none;
      z-index: 60;
    }
    @keyframes explode {
      to { transform: translate(var(--x), var(--y)) scale(0); opacity: 0; }
